@model FlowerShopAuth.Models.Offer

@{
    ViewData["Title"] = "Delete Offer";
}

<h2 class="text-center mb-4 text-danger">🗑️ Delete Offer</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger shadow-sm">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">
                    <strong>Minimum Purchase Amount:</strong> @Model.MinimumAmount.ToString("C")<br />
                    <strong>Discount Percentage:</strong> @Model.DiscountPercentage %<br />
                    <strong>Start Date:</strong> @Model.StartDate.ToString("dd MMM yyyy")<br />
                    <strong>End Date:</strong> @Model.EndDate.ToString("dd MMM yyyy")
                </p>
                <p class="text-danger">Are you sure you want to delete this offer?</p>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
