@{
    ViewData["Title"] = "Checkout";
}

<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #fff0f5;
        padding: 30px 20px;
    }

    h2 {
        font-family: 'Pacifico', cursive;
        color: #d63384;
        text-align: center;
        margin-bottom: 40px;
        font-size: 2.2rem;
    }

    .checkout-card {
        max-width: 450px;
        margin: auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        padding: 30px;
        text-align: center;
        border: 2px solid #ff99cc;
    }

        .checkout-card p {
            font-size: 1.1rem;
            margin: 15px 0;
        }

        .checkout-card h3 {
            font-size: 1.5rem;
            color: #b30059;
            margin: 20px 0 30px;
        }

    .pay-notice {
        font-size: 1.1rem;
        font-weight: 500;
        color: #333;
        margin-top: 20px;
    }
</style>

<h2>🛒 Checkout</h2>

<div class="checkout-card">
    <p><b>Total Amount:</b> @ViewBag.TotalAmount.ToString("C")</p>

    @if (!string.IsNullOrEmpty(ViewBag.AppliedOfferMessage))
    {
        <p style="color:green; font-weight:bold;">@ViewBag.AppliedOfferMessage</p>
    }

    <h3><b>Final Payable Amount:</b> @ViewBag.FinalAmount.ToString("C")</h3>

    <div class="pay-notice">
        Please proceed to pay the above amount to confirm your order.
    </div>
</div>
