@model IEnumerable<FlowerShopAuth.Models.Rating>

@{
    ViewData["Title"] = "Customer Reviews";
    bool isAdmin = ViewBag.IsAdmin != null && (bool)ViewBag.IsAdmin;
}

<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #fff0f5;
        padding: 20px;
    }

    h2 {
        font-family: 'Pacifico', cursive;
        color: #d63384;
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 90%;
        margin: auto;
        border-collapse: collapse;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

    th, td {
        padding: 12px 15px;
        text-align: center;
    }

    th {
        background-color: #ff66b3;
        color: white;
        font-weight: 500;
    }

    tr:nth-child(even) {
        background-color: #ffe6f0;
    }

    tr:hover {
        background-color: #ffd1dc;
        transition: 0.3s;
    }

    .rating-score {
        color: #d63384;
        font-weight: bold;
    }

    .date-added {
        font-size: 0.85rem;
        color: #a83279;
    }

    .rate-btn, .delete-btn {
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        font-size: 1rem;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
    }

    .rate-btn {
        background-color: #28a745;
    }

    .rate-btn:hover {
        background-color: #218838;
    }

    .delete-btn {
        background-color: #dc3545;
    }

    .delete-btn:hover {
        background-color: #c82333;
    }
</style>

<h2>🌟 Customer Reviews 🌟</h2>

<!-- Rate The Website button (only for normal users) -->
@if (!isAdmin)
{
    <div style="text-align:center; margin:20px 0;">
        <a asp-controller="Ratings" asp-action="Create" class="rate-btn">
            ✨ Rate The Website
        </a>
    </div>
}

@if (!Model.Any())
{
    <p style="text-align:center; font-size:1.2rem;">No reviews submitted yet.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>User</th>
                <th>Rating</th>
                <th>Comment</th>
                <th>Date</th>
                @if (isAdmin)
                {
                    <th>Actions</th> <!-- Only admins see this -->
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.UserEmail</td>
                    <td class="rating-score">@review.Score / 5</td>
                    <td>@review.Comment</td>
                    <td class="date-added">@review.DateAdded.ToString("dd MMM yyyy")</td>
                    @if (isAdmin)
                    {
                        <td>
                            <form asp-controller="Ratings" asp-action="Delete" asp-route-id="@review.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this review?');" style="display:inline;">
                                <button type="submit" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
