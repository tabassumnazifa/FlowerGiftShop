@model FlowerShopAuth.Models.Rating

@{
    ViewData["Title"] = "Rate The Website";
}

<link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;500&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #fff0f5;
        padding: 20px;
    }

    h2 {
        font-family: 'Pacifico', cursive;
        color: #d63384;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-card {
        background: #fff;
        border-radius: 15px;
        max-width: 600px;
        margin: auto;
        padding: 25px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

    label {
        font-weight: 500;
        color: #a83279;
    }

    select, textarea {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 8px;
        font-size: 1rem;
    }

    textarea {
        resize: none;
        height: 120px;
    }

    .btn-submit {
        background-color: #28a745;
        color: #fff;
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: 0.3s;
        display: block;
        margin: auto;
    }

        .btn-submit:hover {
            background-color: #218838;
        }
</style>

<h2>✨ Rate The Website ✨</h2>

<div class="form-card">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <!-- Rating dropdown -->
        <div>
            <label for="Score">Rating (1–5):</label>
            <select id="Score" name="Score" required>
                <option value="">-- Select Rating --</option>
                <option value="1">⭐ 1</option>
                <option value="2">⭐⭐ 2</option>
                <option value="3">⭐⭐⭐ 3</option>
                <option value="4">⭐⭐⭐⭐ 4</option>
                <option value="5">⭐⭐⭐⭐⭐ 5</option>
            </select>
        </div>

        <!-- Comment box -->
        <div>
            <label for="Comment">Your Feedback:</label>
            <textarea id="Comment" name="Comment" placeholder="Write your feedback here..." required></textarea>
        </div>

        <!-- Submit button -->
        <button type="submit" class="btn-submit">Submit Review</button>
    </form>
</div>
