@model FlowerShopAuth.Models.Gift

@{
    ViewData["Title"] = "Delete Gift";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h4 class="mb-0">Delete Gift</h4>
                </div>

                <div class="card-body text-center">
                    <h5 class="text-danger mb-3">Are you sure you want to delete this gift?</h5>

                    <div class="mb-3">
                        <img src="@Model.Image" alt="@Model.Name"
                             class="img-fluid rounded shadow-sm"
                             style="max-height:200px;" />
                    </div>

                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Price:</strong> $@Model.Price</p>
                    <p class="text-muted"><strong>Description:</strong> @Model.Description</p>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger px-4 me-2">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
